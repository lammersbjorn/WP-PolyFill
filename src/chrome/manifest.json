{
  "manifest_version": 3,
  "name": "WordPress Translation Filler",
  "version": "2.0.1",
  "description": "Automatically fill translations from APIs and indicate the accuracy of translation according to locale glossary.",
  "web_accessible_resources": [
    {
      "resources": [ "/img/*", "wptf-cute-alert.css", "error-alert.flac", "clipboard-icon.png", "warning-marker.png", "/_metadata", "wptf-options.html", "wptf-inject.js", "wptf-buildstats" ],
      "matches": [ "https://translate.wordpress.org/*" ]

    }
  ],
  "background.service_worker": {
    "scripts": [
      "jsstore.js",
      "jsstore.worker.js"
    ]
  },
  "permissions": [
    "storage"
  ],
  "options_page": "wptf-options.html",
  "content_scripts": [
    {
      "matches": [
        "https://translate.wordpress.org/*"
      ],
      "js": [
        "wptf-buildstats",
        "wptf-functions.js",
        "wptf-purify.min.js",
        "wptf-cute-alert.js",
        "wptf-consistency.js",
        "jsstore.js",
        "jsstore.worker.js",
        "wptf-commonTranslate.js",
        "wptf-deeplTrans.js",
        "wptf-googleTrans.js",
        "wptf-microsoftTrans.js",
        "jsdiff.js",
        "wptf-database.js",
        "wptf-inject.js",
        "wptf-importfile.js",
        "wptf-buildstats.js",
        "contentScript.js"
      ],
      "css": [
        "wptf-cute-alert.css",
        "wptf-style.css"
      ]
    }
  ]
}
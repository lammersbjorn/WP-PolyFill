{
  "manifest_version": 3,
  "name": "WordPress Translation Filler",
  "version": "3.1.7",
  "description": "Automatically fill translations fom Google, DeepL, Microsoft, and OpenAI translation API's. This is the extended version.",

  "web_accessible_resources": [
    {
      "resources": [
        "/img/*",
        "wptf-cute-alert.css",
        "error-alert.flac",
        "clipboard-icon.png",
        "warning-marker.png",
        "/_metadata",
        "wptf-options.html",
        "wptf-inject.js",
        "wptf-database.js",
        "wptf-buildstats.js",
        "wptf-glossary.csv"
      ],
      "matches": [
        "https://translate.wordpress.org/*"
      ]
    }
  ],
  "background.service_worker": {
    "scripts": [
      "jsstore.js",
      "jsstore.worker.js"
    ]
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "1",
        "enabled": true,
        "path": "/wptf-block_rules.json"
      }
    ]
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "*://translate.wordpress.org/*",
    "*://api-free.deepl.com/*",
    "*://api.deepl.com/*",
    "*://api.languagetool.com/v2/*",
    "*://api.languagetoolplus.com/v2/*",
    "*://analytics.languagetoolplus.com/*",
    "*://api.cognitive.microsofttranslator.com/*",
    "*://api.openai.com/*"
  ],
  "options_page": "wptf-options.html",
  "content_scripts": [
    {
      "matches": [
        "https://translate.wordpress.org/*"
      ],
      "js": [
        "wptf-inject.js",
        "wptf-deeplGloss.js",
        "wptf-spellcheck.js",
        "wptf-buildstats.js",
        "wptf-functions.js",
        "wptf-purify.min.js",
        "wptf-cute-alert.js",
        "wptf-consistency.js",
        "jsstore.js",
        "jsstore.worker.js",
        "wptf-commonTranslate.js",
        "wptf-openAITrans.js",
        "wptf-deeplTrans.js",
        "wptf-googleTrans.js",
        "wptf-microsoftTrans.js",
        "jsdiff.js",
        "wptf-database.js",
        "wptf-importfile.js",
        "wptf-database-maintenance.js",
        "contentScript.js"
      ],
      "css": [
        "wptf-cute-alert.css",
        "wptf-style.css"
      ],
      "json": [
        "wptf-block_rules.json"
      ],
      "csv": [
        "wptf-glossary.csv"

      ]
    }
  ]
}